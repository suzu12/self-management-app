= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f|
  .form-wrap
    .form-header
      %h1.form-header-text
        会員情報入力
    = render 'commons/error_messages', model: f.object

    .form-group
      .form-text-wrap
        %label.form-text ニックネーム
        %span.indispensable 必須
      = f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) アプリ内で使用する名前です。", maxlength:"20"

    .form-group
      .form-text-wrap
        %label.form-text メールアドレス
        %span.indispensable 必須
      = f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true

    .form-group
      .form-text-wrap
        %label.form-text パスワード
        %span.indispensable 必須
      = f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字"
      %p.info-text ※英字と数字の両方を含めて設定してください

    .form-group
      .form-text-wrap
        %label.form-text パスワード(確認)
        %span.indispensable 必須
      = f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい"

    .register-btn
      = f.submit "会員登録" ,class:"register-red-btn"
