.container
  .account_page
    .account_page__header
      %h2 Hello! NewMe
    = form_for(@user, url: user_registration_path) do |f|
      = render 'commons/error_messages', model: @user

      %div
        = f.label :email, 'Email'
      %div
        = f.email_field :email, placeholder: "PC・携帯どちらでも可です", class: 'text'
      - if @sns_id.present?
        = hidden_field_tag :sns_auth, true
      - else
        %div
          = f.label :password, 'Password'
        %div
          = f.password_field :password, placeholder: '英数字6文字以上で入力してください', autocomplete: "off", class: 'text'
        %div
          = f.label :password_confirmation, 'Password_Confirmation'
        %div
          = f.password_field :password_confirmation, placeholder: 'もう一度Passwordを入力してください' ,autocomplete: "off", class: 'text'
      = f.submit "CREATE ACCOUNT", class: 'btn-primary'

    = render 'devise/shared/footer'